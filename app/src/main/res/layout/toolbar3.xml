<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rr_full_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:id="@+id/rr_tool"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size30"
    android:background="@color/colorPrimaryDark">

<RelativeLayout
    android:id="@+id/rr_left"
    android:layout_width="@dimen/size3"
    android:layout_height="@dimen/size2"
    android:layout_centerVertical="true"
    android:paddingLeft="@dimen/size0"    >

    <ImageView
        android:id="@+id/img_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@android:drawable/ic_menu_sort_by_size"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/mrg5"
        android:layout_height="@dimen/mrg5"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/back_icon"
        android:visibility="gone"
        />


</RelativeLayout>


        <RelativeLayout
            android:id="@+id/rr_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mrg2"
            android:layout_marginRight="@dimen/mrg2"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/rr_left"

            >


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo App"
            android:textColor="@color/white"
            android:textSize="@dimen/mrg444"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="@dimen/mrg8"
                android:layout_height="@dimen/mrg7"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bell"
                android:visibility="visible"
                />


        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>